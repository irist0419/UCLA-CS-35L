<!DOCTYPE html>
<html lang="en">
  <head>
    <title>IPA Chart</title>
    <meta charset="utf-8">
    <link rel="stylesheet" type="text/css" href="/css/main.css">
  </head>
  <body>
    <div class="quiz">
      <div>
        <h1>Consonant Quiz</h1>
        <p>Choose the symbol heard in the recording.</p>
      </div>
      <div class="question">
        <p>
          <audio controls>
            <source src="http://upload.wikimedia.org/wikipedia/commons/transcoded/4/42/Voiced_labio-dental_fricative.ogg/Voiced_labio-dental_fricative.ogg.mp3" type="audio/mpeg">
          </audio>
        </p>
        <input type="radio" name="q1" value="a"> f<br>
        <input type="radio" name="q1" value="b"> v<br>
      </div>
      <div class="question">
        <p>
          <audio controls>
            <source src="http://upload.wikimedia.org/wikipedia/commons/transcoded/8/80/Voiceless_dental_fricative.ogg/Voiceless_dental_fricative.ogg.mp3" type="audio/mpeg">
          </audio>
        </p>
        <input type="radio" name="q2" value="a"> θ<br>
        <input type="radio" name="q2" value="b"> ð<br>
      </div>
      <div class="question">
        <p>
          <audio controls>
            <source src="http://upload.wikimedia.org/wikipedia/commons/transcoded/5/51/Voiceless_bilabial_plosive.ogg/Voiceless_bilabial_plosive.ogg.mp3" type="audio/mpeg">
          </audio>
        </p>
        <input type="radio" name="q3" value="a"> p<br>
        <input type="radio" name="q3" value="b"> b<br>
      </div>
      <div class="question">
        <p>
          <audio controls>
            <source src="http://upload.wikimedia.org/wikipedia/commons/transcoded/0/02/Voiceless_alveolar_plosive.ogg/Voiceless_alveolar_plosive.ogg.mp3" type="audio/mpeg">
          </audio>
        </p>
        <input type="radio" name="q4" value="a"> t<br>
        <input type="radio" name="q4" value="b"> d<br>
      </div>
      <div class="question">
        <p>
          <audio controls>
            <source src="http://upload.wikimedia.org/wikipedia/commons/transcoded/c/c0/Voiced_alveolar_sibilant.ogg/Voiced_alveolar_sibilant.ogg.mp3" type="audio/mpeg">
          </audio>
        </p>
        <input type="radio" name="q5" value="a"> s<br>
        <input type="radio" name="q5" value="b"> z<br>
      </div>
      <div class="question">
        <p>
          <audio controls>
            <source src="http://upload.wikimedia.org/wikipedia/commons/transcoded/c/cc/Voiceless_palato-alveolar_sibilant.ogg/Voiceless_palato-alveolar_sibilant.ogg.mp3" type="audio/mpeg">
          </audio>
        </p>
        <input type="radio" name="q6" value="a"> ʃ<br>
        <input type="radio" name="q6" value="b"> ʒ<br>
      </div>
      <div class="question">
        <p>
          <audio controls>
            <source src="http://upload.wikimedia.org/wikipedia/commons/transcoded/2/29/Alveolar_nasal.ogg/Alveolar_nasal.ogg.mp3" type="audio/mpeg">
          </audio>
        </p>
        <input type="radio" name="q7" value="a"> n<br>
        <input type="radio" name="q7" value="b"> ŋ<br>
      </div>
      <div class="question">
        <p>
          <audio controls>
            <source src="http://upload.wikimedia.org/wikipedia/commons/transcoded/1/1f/Alveolar_approximant.ogg/Alveolar_approximant.ogg.mp3" type="audio/mpeg">
          </audio>
        </p>
        <input type="radio" name="q8" value="a"> r<br>
        <input type="radio" name="q8" value="b"> ɹ<br>
      </div>
      <div class="question">
        <p>
          <audio controls>
            <source src="http://upload.wikimedia.org/wikipedia/commons/transcoded/b/bc/Alveolar_lateral_approximant.ogg/Alveolar_lateral_approximant.ogg.mp3" type="audio/mpeg">
          </audio>
        </p>
        <input type="radio" name="q9" value="a"> l<br>
        <input type="radio" name="q9" value="b"> w<br>
      </div>
      <div class="question">
        <p>
          <audio controls>
            <source src="http://upload.wikimedia.org/wikipedia/commons/transcoded/4/4d/Glottal_stop.ogg/Glottal_stop.ogg.mp3" type="audio/mpeg">
          </audio>
        </p>
        <input type="radio" name="q10" value="a"> h<br>
        <input type="radio" name="q10" value="b"> ʔ<br>
      </div>
      <button onclick="showResult()">Submit</button>
    </div>
    
    <div id="result" style="display: none;">
      <h2>Result</h2>
      <p id="score"></p>
    </div>
    
    <script>
      function showResult() {
        var score = 0;
        var totalQuestions = 10;
      
        var answers = {
          q1: "b",
          q2: "a",
          q3: "a",
          q4: "a",
          q5: "b",
          q6: "a",
          q7: "a",
          q8: "b",
          q9: "a",
          q10: "b"
        };
      
        for (var i = 1; i <= totalQuestions; i++) {
          var radios = document.getElementsByName('q' + i);
          for (var j = 0; j < radios.length; j++) {
            if (radios[j].checked) {
              if (radios[j].value === answers['q' + i]) {
                score++;
              }
              break;
            }
          }
        }
      
        var resultContainer = document.getElementById('result');
        resultContainer.style.display = 'block';
        var scoreContainer = document.getElementById('score');
        scoreContainer.innerHTML = 'You scored ' + score + ' out of ' + totalQuestions + '.';
      }
    </script>
  </body>
</html>